<% include ../partials/header %>

<h1>These are All of the Books </h1>
<a href="/books/new">Add New Book</a>

<div>	
	<thead>
		<tr>
			<td>Name</td>
			<td>Author</td>
			<td>Year</td>
			<td>ISBN</td>
			<td>Average Rating</td>
			<td>Price</td>
		</tr>
	</thead>
</div>

<% books.forEach(function(book){ %>
<div>	
	<tbody>
		<tr>
			<td><%= book.name %></td>
			<td><%= book.author %></td>
			<td><%= book.year %></td>
			<td><%= book.ISBN %></td>
			<td><%= book.averageRating %></td>
			<td><%= book.price %></td>
			<td><a href="/books/<%= book.id %>/show">Check it out</a></td>
			<td><a href="/books/<%= book.id %>/edit">Edit</a></td>
			<td>
				<form action="/books/<%= book.id %>?_method=DELETE" method="POST">
					<input type="submit" value="Delete">
				</form>
			</td>

		</tr>
	</tbody>
</div>	
<% }) %>


<% include ../partials/footer %>